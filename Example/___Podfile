#三方库静态库
source 'http://gitlab.mogujie.org/ios-team/3rdpartyframeworkspec.git'
#二方库【业务组件】静态库
source 'http://gitlab.mogujie.org/ios-team/mgjpodspec-framework.git'
#三方库转二方库的源码库
source "http://gitlab.mogujie.org/CocoapodsRepos/CocoapodsRepoSpecs.git"
#二方库【业务组件】源码库
source 'http://gitlab.mogujie.org/ios-team/mgjpodspecs.git'
#官方三方库源码库
source 'http://gitlab.mogujie.org/ios-team/cocoapods-official-specs-mirror.git'

platform :ios, '8.0'
inhibit_all_warnings!

install! 'cocoapods', :deterministic_uuids => false

target 'mars_Example' do
  pod 'mars', :path => '../'

  target 'mars_Tests' do
    inherit! :search_paths

    
  end
end

post_install do |installer|
    cmd="
    dir=\"`pwd`/Pods/Headers/Public\"
    cd $dir
    for pod in `ls -1`
        do
            cd $pod
            inner=`ls -1`
            if [ \"$pod\" == \"$inner\" ]
                then
                mv $inner/* ./
                rm -rf $inner
                for file in `ls -1`
                    do
                        followPath=`ls -l \"$file\" | awk -F ' ../' '{print $2}'`
                        ln -fs \"$followPath\" \"$file\"
                        done
                        fi
                        cd $dir
                        done
                        "
                        system(cmd)
                    end
